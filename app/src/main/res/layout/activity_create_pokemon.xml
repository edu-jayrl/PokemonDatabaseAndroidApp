<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgnd"
    tools:context=".CreateActivity">

    <TextView
        android:id="@+id/main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE"
        android:textColor="#000000"
        android:textSize="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_NAME_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="19dp"
        android:hint="Name"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/create_SPEED_edittext"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/create_HP_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:hint="HP"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/create_ATTACK_edittext"
        app:layout_constraintStart_toStartOf="@+id/main_text" />

    <EditText
        android:id="@+id/create_ATTACK_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="19dp"
        android:hint="Attack"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintBottom_toTopOf="@+id/create_SPECIAL_DEFENSE_edittext"
        app:layout_constraintStart_toEndOf="@+id/create_HP_edittext" />

    <EditText
        android:id="@+id/create_DEFENSE_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:hint="Defense"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/create_ATTACK_edittext"
        app:layout_constraintEnd_toEndOf="@+id/create_SPECIAL_DEFENSE_edittext" />

    <EditText
        android:id="@+id/create_SPEED_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:hint="Speed"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintBaseline_toBaselineOf="@+id/create_SPECIAL_ATTACK_edittext"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/create_SPECIAL_ATTACK_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:hint="Special Attack"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toStartOf="@+id/create_ATTACK_edittext"
        app:layout_constraintTop_toBottomOf="@+id/create_HP_edittext" />

    <EditText
        android:id="@+id/create_SPECIAL_DEFENSE_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="25dp"
        android:hint="SpecialDefense"
        android:inputType="number"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/create_type1_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type 1"
        android:textColorHint="#000000"
        app:layout_constraintTop_toBottomOf="@+id/create_SPECIAL_ATTACK_edittext" />

    <EditText
        android:id="@+id/create_type2_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Type 2"
        android:inputType="text"
        android:textColorHint="#000000"
        app:layout_constraintStart_toEndOf="@+id/create_type1_edittext"
        app:layout_constraintTop_toBottomOf="@+id/create_SPECIAL_ATTACK_edittext" />

    <EditText
        android:id="@+id/create_GENERATION_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Generation"
        android:inputType="text"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_SPECIAL_DEFENSE_edittext" />

    <Button
        android:id="@+id/create_pokemon_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_type1_edittext" />

</androidx.constraintlayout.widget.ConstraintLayout>